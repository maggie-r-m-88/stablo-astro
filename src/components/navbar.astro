---
import Container from "@components/container.astro";
import logoImage from "@assets/logo.jpg";
import darkLogo from "@assets/logo-dark.svg";
import { Image } from "@astrojs/image/components";

interface Menu {
  label: string;
  href: string;
  external?: boolean;
  badge?: string;
}
const navmenu: Menu[] = [
  {
    label: "Home",
    href: "/",
  },
  {
    label: "About",
    href: "/about",
  },
  {
    label: "Meet the CDF Family",
    href: "#",
  },
  {
    label: "Contact",
    href: "/contact",
  },
];

const mobilemenu: Menu[] = [...navmenu];
---

<Container>
  <nav class="flex items-center justify-center">
    <!-- Navigation Links (Visible on Medium Screens and Above) -->
    <div class="hidden md:flex flex-wrap items-center justify-center gap-10 top-nav p-2">
      {
        mobilemenu.map((item, index) => (
          <a
            key={index}
            href={item.href}
            class="px-5 py-2 text-sm font-normal dark:text-gray-400 hover:text-blue-500"
            target={item.external ? "_blank" : ""}
            rel={item.external ? "noopener" : ""}>
            {item.label}
          </a>
        ))
      }
    </div>
  </nav>
  <nav class="flex items-center justify-center">

    <!-- Menu Button (Visible on Small Screens) -->
    <div class="md:hidden">
      <button
        id="menu"
        aria-label="Toggle Menu"
        class="px-2 py-1 ml-auto text-gray-500 rounded-md focus:text-blue-500 focus:outline-none dark:text-gray-300">
        <svg
          class="w-6 h-6 fill-current"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24">
          <path
            class="navmenu-toggle"
            fill-rule="evenodd"
            d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
          ></path>
          <path
            class="navmenu-toggle hidden"
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
          ></path>
        </svg>
        
      </button>
    </div>
  </nav>

  <!-- Mobile Menu (Hidden by Default) -->
  <div class="hidden navmenu-toggle md:hidden">
    <div class="flex flex-col items-center justify-start w-full">
      {
        mobilemenu.map((item, index) => (
          <a
            href={item.href}
            class="px-5 py-2 text-sm font-normal text-gray-600 dark:text-gray-400 hover:text-blue-500"
            target={item.external ? "_blank" : ""}
            rel={item.external ? "noopener" : ""}>
            {item.label}
          </a>
        ))
      }
    </div>
  </div>
</Container>

<script is:inline>
  const menuButton = document.getElementById("menu");
  menuButton.addEventListener("click", () => {
    [...document.querySelectorAll(".navmenu-toggle")].forEach((Element) => {
      Element.classList.toggle("hidden");
    });
  });
</script>
<style>
  .top-nav{
    border-top: 1px solid;
    border-bottom: 1px solid;
  }
</style>
